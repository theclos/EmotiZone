<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GraphsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/BlueNormal"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints" />

    <!-- LinearLayout for text at the top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="76dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="vertical">

        <!-- TextView for header text -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Datos estadisticos de la aplicacion"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="statistics.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/barchart"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Registros por emociones"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/BlueNormal"
            app:cornerRadius="56dp"
            app:icon="@drawable/baseline_bar_chart_24"
            app:iconGravity="textEnd"
            app:iconSize="22dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stackedbarchart"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Registro de emociones por mes"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/BlueNormal"
            app:cornerRadius="56dp"
            app:icon="@drawable/baseline_bar_chart_24"
            app:iconGravity="textEnd"
            app:iconSize="22dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button"
            android:id="@+id/horizontalchart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Usuarios totales regitrados"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/BlueNormal"
            app:cornerRadius="56dp"
            app:icon="@drawable/baseline_bar_chart_24"
            app:iconSize="22dp"
            app:iconGravity="textEnd"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button"
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Proporcion de estados emocionales"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/BlueNormal"
            app:cornerRadius="56dp"
            app:icon="@drawable/baseline_pie_chart_24"
            app:iconSize="22dp"
            app:iconGravity="textEnd"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button"
            android:id="@+id/askedchart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Preguntas frecuentes de usuarios"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/BlueNormal"
            app:cornerRadius="56dp"
            app:icon="@drawable/baseline_align_horizontal_left_24"
            app:iconSize="22dp"
            app:iconGravity="textEnd"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/linechart"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Cambios de estados de emociones"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/BlueNormal"
            app:cornerRadius="56dp"
            app:icon="@drawable/baseline_show_chart_24"
            app:iconGravity="textEnd"
            app:iconSize="22dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button"
            android:id="@+id/scatterchart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Actividad del usuario"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/BlueNormal"
            app:cornerRadius="56dp"
            app:icon="@drawable/baseline_area_chart_24"
            app:iconSize="22dp"
            app:iconGravity="textEnd"
            android:layout_gravity="center"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button"
            android:id="@+id/radarchart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Frecuencia del estado emocional"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/BlueNormal"
            app:cornerRadius="56dp"
            app:icon="@drawable/baseline_radar_24"
            app:iconSize="22dp"
            app:iconGravity="textEnd"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>