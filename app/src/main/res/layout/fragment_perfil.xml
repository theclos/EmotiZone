<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".PerfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp">
        <!-- Imagen de perfil -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:shapeAppearanceOverlay="@style/Image_Rounded_ImageView"
            android:src="@drawable/man_user_circle_icon"/>
        <!-- Email del usuario -->
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email del usuario"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/black"/>
        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del usuario"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"/>
        <!-- Fecha -->
        <TextView
            android:id="@+id/user_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de hoy"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"/>

        <!-- Primera línea horizontal -->
        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"/>

        <!-- Conexiones -->
        <TextView
            android:id="@+id/user_connections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/connections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conexiones"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Botón Configurar -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button"
            android:id="@+id/configure_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Configurar"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/colorVerde"
            app:cornerRadius="56dp"
            app:iconGravity="textEnd"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"/>
    </LinearLayout>

</FrameLayout>